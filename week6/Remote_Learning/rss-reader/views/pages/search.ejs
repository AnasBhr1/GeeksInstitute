<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="container mt-4">
  <h2>Search Posts</h2>

  <form method="POST" action="/search/title" class="mb-3">
    <input type="text" name="title" class="form-control" placeholder="Search by Title" required>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
  </form>

  <form method="POST" action="/search/category">
    <input type="text" name="category" class="form-control" placeholder="Search by Category" required>
    <button type="submit" class="btn btn-secondary mt-2">Search</button>
  </form>
</div>

<%- include('../partials/posts', { posts: posts }) %>
<%- include('../partials/footer') %>
